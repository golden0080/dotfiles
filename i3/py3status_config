order += "timer"
order += "brightness_status"
order += "spotify"
order += "volume_status"
order += "online_status"
order += "vpn_status"
order += "group sysinfo"
order += "group io"
order += "battery_level"
order += "clock"

py3status {
  nagbar_font = 'pango:Ubuntu Mono 14'
}

timer {
}

battery_level {
  battery_id = 'all'
  hide_seconds = True
  threshold_full = 85
  hide_when_full = False
  notify_low_level = True
  format = "{icon} {percent}%"
}

# cycling through London, Warsaw, Tokyo
clock {
    format = ["{Local}", "{Asia/Shanghai}", "{America/New_York}"]
    format_time = "%Y/%m/%d (%a) {name} {icon}%H:%M:%S"
}

group io {
  position = 'center'
  min_length = 45
  cycle = 40
  fixed_width = True
  button_toggle = 3
  button_next = 1
  button_prev = 2
  diskdata {
    cache_timeout = 15
    format = '{disk}: {used}/{total_space} ({total})'
  }

  netdata {
    cache_timeout = 3
    format = "{nic} [\?color=down Spd(Kb): {down}↓ {up}↑] "
  }
}

group sysinfo {
  position = 'center'
  min_length = 45
  cycle = 25
  fixed_width = True
  button_toggle = 3
  button_next = 1
  button_prev = 2
  sysdata 0 {
    cache_timeout = 5
  }
  nvidia_smi {}
  sysdata 1 {
    cache_timeout = 45
    format = "CPU Temp: {cpu_temp}{temp_unit}"
  }
}

online_status {
  cache_timeout = 90
  timeout = 5
  format = "web {icon}"
}

spotify {
  button_play_pause = 1
  button_next = 5
  button_previous = 4
  cache_timeout = 4
}

volume_status {
  cache_timeout = 30
  command = 'pactl'
  volume_delta = 2
}

vpn_status {
  cache_timeout = 60
}
